@model QLSV.Models.SinhVien

@{
    ViewData["Title"] = "Create";
}
<h1>Thêm mới danh sách sinh viên</h1>

<hr />
    <form asp-action="Upload" enctype="multipart/form-data">
        <div class="row form-control">
            <label class="col-sm-2">Import data from Excel:</label>
            <input type="file" name="file" class="col-sm-4">
            <input type="submit" value="Upload" class="btn btn-primary">
        </div>
    </form>
<hr>


<div class="mb-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSV" class="control-label"></label>
                <input asp-for="MaSV" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="MaSV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hovaten" class="control-label"></label>
                <input asp-for="Hovaten" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="Hovaten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Malop" class="control-label"></label>
                <select asp-for="Malop" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.Malop"></select>
            </div>
            <div class="form-group">
                <label asp-for="Makhoa" class="control-label"></label>
                <select asp-for="Makhoa" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.Makhoa"></select>
            </div>
            <div class="w3-margin-top">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
