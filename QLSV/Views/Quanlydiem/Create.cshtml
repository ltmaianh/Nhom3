@model QLSV.Models.Quanlydiem

@{
    ViewData["Title"] = "Create";
}
<div class="flex-container">
    <form class="w3-container w3-card-4 w3-light-gray w3-margin  " style="width:50%;" asp-action="Create">
<h1>Thêm mới thông tin lớp </h1>
<div class="mb-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSV" class="control-label"></label>
                <select asp-for="MaSV" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.MaSV"></select>
            </div>
