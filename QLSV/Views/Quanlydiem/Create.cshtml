@model QLSV.Models.Quanlydiem

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Upload" enctype="multipart/form-data" class="mt-4">
    <div class="form-row align-items-center">
        <label for="fileInput" class="col-sm-2 col-form-label text-start" style="color: #3498db;">Choose Excel file:</label>
        <div class="col-sm-7">
            <input type="file" class="form-control-file" id="fileInput" name="file">
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary" style="background-color: #3498db; border-color: #3498db;">Upload</button>
        </div>
    </div>
</form>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSV" class="control-label"></label>
                <select asp-for="MaSV" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.MaSV"></select>
            </div>
            <div class="form-group">
                <label asp-for="TenSV" class="control-label"></label>
                <input asp-for="TenSV" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="TenSV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mamonhoc" class="control-label"></label>
                <select asp-for="Mamonhoc" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.Mamonhoc"></select>
            </div>
            <div class="form-group">
                <label asp-for="DiemMH" class="control-label"></label>
                <input asp-for="DiemMH" class="w3-input w3-border w3-border-blue w3-round" />
                <span asp-validation-for="DiemMH" class="text-danger"></span>
            </div>
            <div class="w3-margin-top">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a class="btn btn-success" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
