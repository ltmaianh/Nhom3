@model QLSV.Models.Quanlydiem

@{
    ViewData["Title"] = "Edit";
}
<div class="flex-container">
    <form class="w3-container w3-card-4 w3-light-grey "  style="width:60%;"  asp-action="Edit">
<h1>Cập nhật thông tin</h1>

<div class="mb-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sothutu" />
            <div class="form-group">
                <label asp-for="MaSV" class="control-label"></label>
                <input asp-for="MaSV" class="form-control" />
                <span asp-validation-for="MaSV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSV" class="control-label"></label>
                <input asp-for="TenSV" class="form-control" />
                <span asp-validation-for="TenSV" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="Tenmonhoc" class="control-label"></label>
                <select asp-for="Tenmonhoc" class ="w3-input w3-border w3-border-blue w3-round" asp-items="ViewBag.Tenmonhoc"></select>
            </div>
            <div class="form-group">
                <label asp-for="Diem" class="control-label"></label>
                <input asp-for="Diem" class="form-control" />
                <span asp-validation-for="Diem" class="text-danger"></span>
            </div>
             <div class="w3-margin-top">
                <input type="submit" value="Lưu thông tin " class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

</form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
