@model IEnumerable<QLSV.Models.Quanlymonhoc>

@{
    ViewData["Title"] = "Index";
}
<form class="w3-container w3-card w3-light-gray w3-icon-blue ">
<h1 class="w3-center w3-text-black">Danh sách quản lý môn học</h1>
<p>   
     <a class="w3-btn w3-green w3-border w3-round" asp-action="Create">+ Thêm mới</a>
</p>
<table class="w3-table w3-hoverable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tenmonhoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenmonhoc)
            </td>
            <td>
                <a class=" w3-btn w3-margin-bottom w3-xlarge fa fa-edit w3-blue w3-border w3-round" asp-action="Edit" asp-route-id="@item.Mamonhoc"></a> |
                <a class=" w3-btn w3-margin-bottom w3-xlarge fa fa-info-circle w3-blue w3-border w3-round" asp-action="Details" asp-route-id="@item.Mamonhoc"></a> |
                <a class=" w3-btn w3-margin-bottom w3-xlarge fa fa-trash w3-blue w3-border w3-round" asp-action="Delete" asp-route-id="@item.Mamonhoc"></a>
            </td>
        </tr>
}
    </tbody>
</table>
</form>
